<view>
    <columns>
        <group name="service-data" title="product-service" numcolumns="12">
            <column name="product" numcolumns="4" order="110">
                <widget type="textarea" fieldname="material"/>
            </column>
            <column name="product-status" numcolumns="4" order="120">
                <widget type="textarea" fieldname="material_estado"/>
            </column>
            <column name="accesories" numcolumns="4" order="130">
                <widget type="textarea" fieldname="accesorios"/>
            </column>
            <column name="description" numcolumns="6" order="140">
                <widget type="textarea" fieldname="descripcion"/>
            </column>
            <column name="solution" numcolumns="6" order="150">
                <widget type="textarea" fieldname="solucion"/>
            </column>
        </group>
        <group name="dates" title="Dates" numcolumns="12">
            <column name="start-date" numcolumns="2" order="160">
                <widget type="date" fieldname="fechainicio"/>
            </column>
            <column name="start-hour" numcolumns="1" order="170">
                <widget type="text" fieldname="horainicio"/>
            </column>
            <column name="end-date" numcolumns="2" order="180">
                <widget type="date" fieldname="fechafin"/>
            </column>
            <column name="end-hour" numcolumns="1" order="190">
                <widget type="text" fieldname="horafin"/>
            </column>
            <column name="warranty" numcolumns="2" order="200">
                <widget type="checkbox" fieldname="garantia"/>
            </column>
        </group>
        <group name="notes" numcolumns="12">
            <column name="observations" numcolumns="12" order="110">
                <widget type="textarea" fieldname="observaciones" />
            </column>
        </group>
    </columns>
</view>